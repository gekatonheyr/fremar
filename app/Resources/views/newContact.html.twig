{% extends 'base.html.twig'%}

{% block title %}Fremar contacts - creating new entry{% endblock %}
{% block scripts %}
    <script type="text/javascript" src="{{ asset('js/getContent.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div>
            {{ form_label(form.firstName, 'Enter first name here: ') }}
            {{ form_widget(form.firstName)}}
        </div>
        <div>
            {{ form_label(form.lastName, 'Enter last name here: ') }}
            {{ form_widget(form.lastName) }}
        </div>
        <div>
            {{ form_label(form.telNumber, 'Telephone number place here: ') }}
            {{ form_widget(form.telNumber) }}
        </div>
        <div>
            {{ form_label(form.emailAddress, 'Email address of the contact: ') }}
            {{ form_widget(form.emailAddress) }}
        </div>
        <div>
            {{ form_label(form.resPlaceName, 'Residence place put here (city, town etc.: )') }}
            {{ form_widget(form.resPlaceName) }}
        </div>
        <div>
            {{ form_label(form.resPlaceDistrict, 'Choose district here: ') }}
            {{ form_widget(form.resPlaceDistrict, {'attr' : {'onchange' : 'getStreetsList(document.getElementById("new_contact_resPlaceStreet"), this.value);'}}) }}
        </div>
        <div>
            {{ form_label(form.resPlaceStreet, 'Choose street here: ') }}
            {{ form_widget(form.resPlaceStreet, {'attr' : {'disabled' : 'disabled'}}) }}
        </div>
        <div>
            {{ form_label(form.resPlaceHouseNumber, 'Enter the house number here: ') }}
            {{ form_widget(form.resPlaceHouseNumber) }}
        </div>
        <div>
            {{ form_label(form.resPlaceAppartNumber, "And appartments number set here: ") }}
            {{ form_widget(form.resPlaceAppartNumber) }}
        </div>

        {{ form_widget(form.saveAndRet2Cat, {'attr' : {'class':'btn btn-primary'}}) }}
        {{ form_widget(form.saveAndAddAnother, {'attr' : {'class':'btn btn-warning'}}) }}
        {{ form_widget(form.clearData, {'attr' : {'class':'btn btn-danger'}}) }}
        {{ form_end(form) }}
    </div>

{% endblock %}